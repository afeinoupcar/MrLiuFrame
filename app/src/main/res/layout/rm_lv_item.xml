<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/rm_lv_item_backimag"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical">

        <longwatch.com.mrliuframe.util.CircleImageView
            android:id="@+id/rm_lv_item_imag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/circlebiankuang"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rm_lv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="您的昵称"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:src="@mipmap/li_icon_home_location_red" />

                <TextView
                    android:id="@+id/rm_lv_item_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您的地址"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/rm_lv_item_online"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:background="@drawable/biankuang"
            android:gravity="center"
            android:padding="2dp"
            android:text="online"
            android:textColor="@android:color/holo_red_light" />
    </LinearLayout>

    <TextView
        android:id="@+id/rm_lv_item_qianming"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/qianmingbiankuang"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="您的个性签名"
        android:textColor="@android:color/white"
        android:visibility="invisible" />
</RelativeLayout>
